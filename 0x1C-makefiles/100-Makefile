CC = gcc
SRC = main.c holberton.c
OBJ = $(SRC:.c=.o)
NAME = holberton
CFLAGS = -Wall -Werror -Wextra -pedantic
.PHONY: all

all: $(SRC:.c=.o) m.h
	$(CC) $(OBJ) -o $(NAME)
.PHONY: clean 
clean:
	$(RM) *~ $(NAME)
.PHONY: oclean 
oclean:
	$(RM) $(OBJ)
.PHONY: fclean
fclean: oclean clean
.PHONY: re
re: oclean all