CC = gcc
SRC = main.c holberton.c
OBJ = $(SRC:.c=.o)
NAME = holberton
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all
all: m.h $(SRC:.c=.o)
	$(CC) $(OBJ) -o $(NAME)
.PHONY: clean
clean:
	$(RM) *~ $(NAME)
.PHONY: oclean
oclean:
	$(RM) $(OBJ)
.PHONY: fclean
fclean: oclean clean
.PHONY: re
re: oclean all